#!/usr/bin/env bash

set -o errexit
set -o nounset
set -o pipefail

IFS=$'\n\t'
SCRIPT_FOLDER="$(dirname $(readlink -f "${0}"))"

push() {
  local image="${1}"
  local tag="${2}"
  local retry="${3:-5}"

  n=0
  until [ $n -ge ${retry} ]; do
    docker push "${image}:${tag}" && break
    echo "Try #$n failed ($image:${tag})... sleeping for 15 seconds"
    n=$[$n+1]
    sleep 15
  done
}

digest() {
  local image="${1}"
  local tag="${2}"

  docker image list --no-trunc --format {{.ID}} "${image}${tag:+":${tag}"}"
}

push_if_changed() {
  local image="${1}"
  local tag="${2}"
  local dockerfile="${3:-Dockerfile}"

  local currentDigest="$(digest "${image}" "${tag}")"
  local cachedDigest="$(cat ${dockerfile}.digest || echo "<no_digest>")"
  if [[ "${currentDigest}" != "${cachedDigest}" ]]; then
    echo "INFO: pushing '${image}:${tag}' as it has been updated since the last time is has been pulled."
    push "${image}" "${tag}"
  else
    echo "INFO: No need to push '${image}:${tag}', it has same content since the last time is has been pulled."
  fi
}

build() {
  local image="${1}"
  local tag="${2}"
  local dockerfile="${3:-Dockerfile}"
  local context="${4:-"$(dirname "${dockerfile}")"}"

  if [[ $# -gt 4 ]]; then
    shift 4
  else
    shift $#
  fi

  docker pull "${image}:${tag}" && digest "${image}" "${tag}" > "${dockerfile}.digest" || :
  
  local parent_image=$(grep -E " *FROM" "${dockerfile}" | sed -E 's/.*FROM (.*)/\1/')
  
  docker pull ${parent_image}

  local check_for_update_logs=$(mktemp)
  local check_for_update_logs_parent=$(mktemp)
  if ${SCRIPT_FOLDER}/check-for-update.sh "${image}:${tag}" > "${check_for_update_logs}"; then
    # ${image}:${tag} packages are up to date, build with cache
    echo "INFO: Building ${dockerfile} with cache from ${image}:${tag}"
    ${SCRIPT_FOLDER}/buildctl build_with_cache "${image}" "${tag}" "${dockerfile}" "${context}"
  elif ${SCRIPT_FOLDER}/check-for-update.sh "${parent_image}" > "${check_for_update_logs_parent}"; then
    # ${image}:${tag} packages are outdated, but ${parent_image} packages are up to date, build with no cache
    echo "INFO: Building ${dockerfile} with no cache"
    docker build --no-cache -t "${image}:${tag}" -f "${dockerfile}" "$@" "${context}"
  elif diff "${check_for_update_logs}" "${check_for_update_logs_parent}" | grep '^<' > /dev/null; then
    # Both ${image}:${tag} and ${parent_image} packages are outdated, some outdated packages from ${image}:${tag} are not outdated/installed in ${parent_image}, build with no cache
    echo "INFO: Building ${dockerfile} with no cache"
    docker build --no-cache -t "${image}:${tag}" -f "${dockerfile}" "$@" "${context}"
  else
    # Both ${image}:${tag} and ${parent_image} packages are outdated, but all outdated packages from ${image}:${tag} come from ${parent_image}, build with cache
    echo "INFO: Building ${dockerfile} with cache from ${image}:${tag}"
    ${SCRIPT_FOLDER}/buildctl build_with_cache "${image}" "${tag}" "${dockerfile}" "${context}"
  fi

  rm "${check_for_update_logs}" "${check_for_update_logs_parent}"
}

build_and_push() {
  local image="${1}"
  local tag="${2}"
  local dockerfile="${3:-Dockerfile}"
  local context="${4:-"$(dirname "${dockerfile}")"}"

  if [[ $# -gt 4 ]]; then
    shift 4
  else
    shift $#
  fi

  build "${image}" "${tag}" "${dockerfile}" "${context}" "$@"
  push_if_changed "${image}" "${tag}" "${dockerfile}"
}

build_all() {
  local repo="${1}"
  local from="${2}"
  local image="${3:-}"
  mapfile -t dockerfiles < <(find -L "${from}" -iname '*Dockerfile' | sed 's|\./||' | sort -V)
  for dockerfile in ${dockerfiles[@]}; do
    local build_dir=$(dirname "$dockerfile")
    local tag=${build_dir##*\/}
    : "${image:=$(basename "${from}")}"

    if [[ -z "${tag:-}" ]] || [[ "${tag}" == "$(basename "${from}")" ]]; then
      tag="latest"
    fi

    build "${repo}/${image}" "${tag}" "${dockerfile}"

    if [[ "${dockerfile}" = "${dockerfiles[-1]}" ]] && ! find "${from}" -type l -name "latest" | grep '.*'; then
      tag_alias "${repo}/${image}" "${tag}" "latest"
    fi
  done
}

push_all() {
  local repo="${1}"
  local from="${2}"
  local image="${3:-}"
  mapfile -t dockerfiles < <(find -L "${from}" -iname '*Dockerfile' | sed 's|\./||' | sort -V)
  for dockerfile in ${dockerfiles[@]}; do
    local build_dir=$(dirname "$dockerfile")
    local tag="${build_dir##*\/}"
    : "${image:=$(basename "${from}")}"

    if [[ -z "${tag:-}" ]] || [[ "${tag}" == "$(basename "${from}")" ]]; then
      tag="latest"
    fi
    
    push_if_changed "${repo}/${image}" "${tag}" "${dockerfile}"
    
    if [[ "${dockerfile}" = "${dockerfiles[-1]}" ]] && ! find "${from}" -type l -name "latest" | grep '.*'; then
      push_if_changed "${repo}/${image}" "latest" "${dockerfile}"
    fi
  done
}

tag_alias() {
  local image="${1}"
  local tag="${2}"
  local newtag="${3}"
  docker tag "${image}:${tag}" "${image}:${newtag}"
}

clean() {
  docker container prune -f
  docker image prune -f
  docker volume prune -f
}

rmi_all() {
  local r="${1}"
  if [[ $(docker image list ${r} | wc -l) -gt 1 ]]; then
    docker image list ${r} | tr -s ' ' | tail -n +2 | cut -d ' ' -f 3 | sort -u | xargs docker image rm -f
  fi
}

main() {
  echo "You must enter a valid command"
  exit 1
}

run() {
  local args=$*
  local f="${1:-}"

  if [[ "$f" == "" ]]; then
    main
  else
    $args
  fi
}

run "$@"